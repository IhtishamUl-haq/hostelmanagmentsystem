@model IEnumerable<HostelManagementSystem.Models.Room>

@{
    ViewBag.Title = "ViewRooms";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="~/Content/StudentHostelRoom.css" rel="stylesheet" />

</head>
<body>
    <div style="float: right;margin-top:-100px; position:relative;margin-right:70px">
        <a href="@Url.Action("ViewHostel","Student")" class="btn text-center" style="text-decoration:none;height:50px; color:white;font-weight:bold">Back</a>
    </div>
    <div class="container mt-5">
        <div class="row ">
            <div class="col">
                @if (Model == null)
                {
                    <div style="color:red;margin-left:30%;margin-top:100px;font-size:x-large;font-weight:900">
                        @ViewBag.Rooms
                    </div>
                }
                else
                {
                    foreach (var rooms in Model)
                    {
                        <div class="hostelCard h-10 w-50">
                            <img class="hostel-img" src="https://images.unsplash.com/photo-1623625434462-e5e42318ae49?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=871&q=80" alt="..." />

                            <div class="hostel-body">
                                <div class="text-left text-s-dark" style="margin-left:10px">
                                    <h6>Room Number<span>@rooms.Number</span></h6>
                                    <h6>Room Size<span>@rooms.Size Bed</span></h6>
                                    <h6>Room Rent<span>@rooms.Rent RS</span></h6>
                                    <h6>Seat Available <span>@rooms.NoSeatAvailable</span></h6>
                                </div>

                                <div class="hostelCard-footer bg-transparent">
                                    <div class="text-center"><a class="btn btn-primary" style="width:100%" href="@Url.Action("AddPayment", "Payment", new {roomId=rooms.roomId})">Book Room</a></div>
                                </div>
                            </div>
                        </div>


                    }
                }

            </div>

        </div>
    </div>
</body>
</html>
