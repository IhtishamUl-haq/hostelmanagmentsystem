<body>
    <div class="hostel-link" style="float: right;margin-top:-90px; position:relative;margin-right:70px ">
        <a @*href="@Url.Action("Create","Hostel")"*@ href="#" data-toggle="modal" data-target="#AddHostel" style="font-weight: bold; margin-right:50px"><span>Add Hostel</span></a>
        <a href="@Url.Action("Logout","Login")" style=" font-weight: bold;">Logout</a>
    </div>
    <div class="modal fade" id="AddHostel" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header ">
                    <h5 class="modal-title" style="margin-left:150px">Add Hostel</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <form id="hostelAdd" action="Create" method="post">
                        <div class="row">
                            <div style="color:red;margin-left:30%;font-size:x-large;font-weight:900">
                                @TempData["hostelNotCreate"]
                            </div>
                            <div class="col-md-8" style="margin-left:90px">
                                <div class="form-group mt-2">
                                    <input id="hostelName" type="text" name="Name" class="form-control" placeholder="Hostel Name *" />
                                </div>
                                <div class="form-group mt-2">
                                    <input id="hostelOwnerName" type="text" name="OwnerName" class="form-control" placeholder="Hostel Owner Name *" />
                                </div>
                                <div class="form-group mt-2">
                                    <input id="hostelAddress" type="text" name="Address" class="form-control" placeholder="Hostel Address *" />
                                </div>

                                <div class="form-group mt-2">
                                    <p style="margin-bottom:0px">e.g:01231234567</p>
                                    <input id="hostelPhoneNo" type="text" name="PhoneNo" class="form-control" placeholder="Hostel Phone Number *" />
                                </div>

                            </div>
                            @*<div class="col-md-6">
                                    <div class="form-group">
                                        <textarea name="txtMsg" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;"></textarea>
                                    </div>
                                </div>*@
                        </div>
                        <div class="modal-footer hostel-link">
                            <button type="button" class="btn btn-secondary btnViewHostel" data-dismiss="modal">Close</button>
                            <input type="submit" name="btnAddHostel" class="btn btn-secondary btnViewHostel" value="Add Hostel" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


