@model IEnumerable<HostelManagementSystem.Models.Hostel>

@{
    ViewBag.Title = "HostelList";
}
<!doctype html>
<html>
<head>

    <link href="~/Content/HostelList.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    @*<a href="~/Views/Hostel/Create.cshtml">~/Views/Hostel/Create.cshtml</a>*@

