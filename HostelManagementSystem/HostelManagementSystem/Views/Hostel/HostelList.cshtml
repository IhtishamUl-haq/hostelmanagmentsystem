    @*<h2>Hostel List</h2>*@
    <div style="color:red">
        @ViewBag.hostelNotEdit
    </div>

    <div style="color:red;margin-left:200px;font-weight:bold">@TempData["HostelHaveRooms"]</div>

    <div class="container">
        <div class="row ">
            <div style="color:red;margin-left:30%;margin-top:20px;font-size:x-large;font-weight:900">
                @TempData["hostelNotCreate"]
                @TempData["hostelEdit"]
                @TempData["hostelAdd"]
            </div>
            @if (Model == null)
            {
                <div style="color:red;margin-left:30%;margin-top:100px;font-size:x-large;font-weight:900">
                    @ViewBag.NoHostel
                </div>
            }
            else
            {

                foreach (var hostel in Model)
                {

                    <div class="col-sm-3">
                        <div class="Hostel">
                            <div class="hostel-image h-50">
                                <img class="img-responsive" src="https://images.unsplash.com/photo-1623625434462-e5e42318ae49?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=871&q=80" height="200">
                                <span class="card-title" style="font-weight:bold">@hostel.Name</span>
                            </div>
                            <div class="card-title" style="padding-left:10px">
                                <label>Owner</label>
                                <span style="margin-right:20px;float:right"> @hostel.OwnerName</span>
                            </div>
                            <div class="card-title" style="padding-left: 10px;">
                                <label>Phone number</label>
                                <span style="margin-right: 20px; float: right">@hostel.PhoneNo</span>

                            </div>

                            <div class="card-title" style="padding-left:10px">
                                <label>Location</label>
                                <span style="margin-right: 20px; float: right">@hostel.Address</span>
                            </div>
                            <hr />
                            <div class="hostel-link">
                                @*<a href="@Url.Action("AddRoom", "Hostel", new { id = hostel.hostelId })"> <span>Add room</span></a>*@
                                @*<a href="#" data-toggle="modal" data-target="#Addroom"><span>Add Room</span></a>*@
                                <a href="@Url.Action("RoomList", "Hostel", new { id = hostel.hostelId })" style="margin-left:80px;">View Rooms</a>

                            </div>
                            <hr />
                            <div class="hostel-link">
                                @*<h5 style="margin-left:10px">Hostel will be</h5>*@
                                <a href="@Url.Action("EditHostel", "Hostel", new { id = hostel.hostelId })"> <span>Update Hostel</span></a>
                                @*<a href="@Url.Action("HostelDeea", "Hostel", new { id = hostel.hostelId })" target="new_blank" style="margin-right:3px"><span>Details</span></a>*@
                                @*<a href="@Url.Action("DeleteHostel", "Hostel", new { id = hostel.hostelId })" style=""><span>Delete Hostel</span></a>*@


                                @Html.ActionLink("Delete Hostel", "DeleteHostel", "Hostel",
                                 new { id = hostel.hostelId },
                                   new { onclick = "return confirm('Are you sure to delete this hostel?');" })

                            </div>

                        </div>


                    </div>


                }
            }
        </div>
    </div>
    <script src="~/Scripts/AddHostel.js">


    </script>

</body>
</html>

