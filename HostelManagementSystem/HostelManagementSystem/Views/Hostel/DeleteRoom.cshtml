
@model HostelManagementSystem.Models.Room
 
@{
    ViewBag.Title = "DeleteRoom";
}

 <html>
<head>

</head>
<body>
    <div class="container">
        <div class="row">

            <div class="col" style="margin-left:300px">
                <h3>Delete Room</h3>
                <h5 style="color:red">Are you sure you want to delete this?</h5>
                <div style="color: red;margin-left:100px">
                    @ViewBag.Error

                </div>

            </div>
            @if (Model == null)
            {


                <div style="color:red;font-weight:bold;margin-left:250px"> <h3>Error occurred during processing</h3></div>
            }
            else
            {
                <div class="row RoomDeatils">
                    <div class="col-md-9" style="width:400px">

                        <ul>
                            <li><span class="">Room Number</span> <span class="deatils"> @Model.Number</span> </li>
                            <li><span>Room size</span> <span class="deatils">@Model.Size</span> </li>
                            <li><span>Room Rent</span><span class="deatils">@Model.Rent</span> </li>
                            <li><span>No of Booking</span><span class="deatils">@Model.NoSeatAvailable</span> </li>

                        </ul>
                        <div>
                            <div class="form-actions" style="margin-left:80px">
                                <form action="DeleteRoom" method="post">
                                    <input type="submit" class="btn btn-primary" value="Delete">
                                    <a href="@Url.Action("HostelList", "Hostel")" class="btn btn-primary">View Hostel</a>
                                </form>



                            </div>
                        </div>


                    </div>
                </div>
            }

            </div>

    </div>
    <style>
        .RoomDeatils{
            margin-left:200px;
        }
        .RoomDeatils ul {
            list-style: none;
            padding: 0;

        }

            .RoomDeatils ul li {
                display: block;
                color: #555;
                padding: 5px;
                font-weight: 400;
                font-size: 15px;
                margin-left: 30px;
                padding-top: 10px;
            }

                .RoomDeatils ul li:hover span {
                    color: rgb(0, 4, 51);
                }

                .RoomDeatils ul li span {
                    color: #555;
                    padding-right: 10px;
                }
        .deatils {
            float: right;
        }

                 
    </style>
</body>
</html>
