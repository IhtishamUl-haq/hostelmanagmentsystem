@model HostelManagementSystem.ViewModels.PaymentViewModel
@{
    ViewBag.Title = "AddPayment";
}
<html>
<head>

    <link href="~/Content/Payment.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="row ">
            <div class="col-sm-12">
                <div class="card ">
                    <p class="heading text-center">PAYMENT DETAILS</p>
                    <div style="color:red">
                        @ViewBag.PaymentNotAdd
                    </div>

                    <form class="payment-details" style="margin-left:100px" id="payment" action="AddPayment" method="post">
                        <div class="form-group mb-0">
                            <p class="text-bg mb-0">Payments Amount</p>
                            <input type="text" name="paymentsAmount" id="paymentsAmount" value="@Session["RoomPay"]" disabled>
                            @*<div style="color:red">@ViewBag.RoomRentNotequal</div>*@

                        </div>

                        <div class="form-group mt-2">
                            <p class="text-bg mb-0">Payment Type</p> @*<input type="text" name="paymentType" id="paymentType" placeholder="Cash or Online" size="17">*@
                            <select class="w-50 " name="paymentType" id="paymentType" required>
                                <option value="" disabled selected>Please Select </option>
                                <option value="Cash">Cash</option>
                                <option value="Online"> Online</option>
                            </select>
                        </div>
                        <div class="form-group pt-2 w-25 mt-3">
                            <div class="row d-flex">
                                <div class="col-sm-5 pt-0 w-25">
                                    <input type="submit" class="btn" value="Book Room" style="margin-left:-90px;width:150px">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $
</script>

