    <script>

         
        $('#LoginForm').on("submit", function (e) {
            if (ValdiateForm() == false) {
                ValdiateForm();
                e.preventDefault();
            } 
        });

        function ValdiateForm()
        {
            var valdiate = true;
            var inputEmail = $("#email").val();
            var inputPassword = $('#password').val();

            $('.Error').remove();
            //if (EmailReg(inputEmail) == false) {
            //    $('#email').after('<span class="Error" style="color:red">Please enter valid email.</span>');
            //    validate = false;
            //}
            //if (PasswordRegExp(inputPassword) == false) {
            //    $('#password').after('<span class="Error" style="color:red">Password must be include upercase,lowercase and special character.</span>');
                
            //}
            if (inputEmail.length < 1) {
                $('#email').after('  <span id="Error" style="color:red"> This field is required</span>');
                valdiate = false

            }
            if (inputPassword.length < 8) {
                $('#password').after('  <span class="Error" style="color:red"> Password must be at least  8 characters  </span>');
                valdiate = false;
            }
            return valdiate;
        }

    </script>
    <style>
        .col {
            box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
           
